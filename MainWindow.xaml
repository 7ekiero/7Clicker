<Window x:Class="SteroidClicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="450" Width="450"
        Background="#1E1E1E" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="#444" CornerRadius="4,4,0,0" Margin="2,0">
                            <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="10,5"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#2D2D30" />
                                <Setter Property="Foreground" Value="#00FF99" />
                                <Setter Property="FontWeight" Value="Bold" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#1E1E1E" />
                                <Setter Property="Foreground" Value="Gray" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Padding="15">
        <StackPanel>
            <TextBlock Text="github.com/7ekiero" Foreground="#FFA3FC" FontSize="14" FontWeight="Bold" Margin="0,0,0,15" HorizontalAlignment="Center"/>

            <TabControl x:Name="Tabs" Background="Transparent" BorderThickness="0" Height="260">

                <TabItem Header="MODO FANTASMA">
                    <StackPanel Margin="0,20,0,0">
                        <TextBlock Text="Simulación de Navegación Errática" Foreground="#888" FontStyle="Italic" Margin="0,0,0,15"/>

                        <DockPanel Margin="0,0,0,5">
                            <TextBlock Text="Mínimo espera (segundos)" Foreground="#DDD"/>
                            <TextBlock Text="{Binding ElementName=SliderMinSec, Path=Value, StringFormat=N1}" Foreground="Cyan" DockPanel.Dock="Right"/>
                        </DockPanel>
                        <Slider x:Name="SliderMinSec" Minimum="0.5" Maximum="10" Value="2" TickFrequency="0.5" IsSnapToTickEnabled="True"/>

                        <DockPanel Margin="0,15,0,5">
                            <TextBlock Text="Máximo espera (segundos)" Foreground="#DDD"/>
                            <TextBlock Text="{Binding ElementName=SliderMaxSec, Path=Value, StringFormat=N1}" Foreground="Cyan" DockPanel.Dock="Right"/>
                        </DockPanel>
                        <Slider x:Name="SliderMaxSec" Minimum="2" Maximum="30" Value="5" TickFrequency="1" IsSnapToTickEnabled="True"/>

                        <CheckBox x:Name="ChkMovement" Content="Simular micro-movimientos (Idle)" Foreground="White" Margin="0,20,0,0" IsChecked="True"/>

                        <TextBlock Text="Incluye probabilidad de doble-clic y distracciones." Foreground="#555" FontSize="10" Margin="0,10,0,0"/>
                    </StackPanel>
                </TabItem>

                <TabItem Header="MODO TURBO">
                    <StackPanel Margin="0,20,0,0">
                        <DockPanel Margin="0,0,0,5">
                            <TextBlock Text="Velocidad Media (ms)" Foreground="#DDD"/>
                            <TextBlock Text="{Binding ElementName=SliderMean, Path=Value, StringFormat=N0}" Foreground="Orange" DockPanel.Dock="Right"/>
                        </DockPanel>
                        <Slider x:Name="SliderMean" Minimum="20" Maximum="1000" Value="100"/>

                        <DockPanel Margin="0,15,0,5">
                            <TextBlock Text="Jitter / Caos (ms)" Foreground="#DDD"/>
                            <TextBlock Text="{Binding ElementName=SliderDev, Path=Value, StringFormat=N0}" Foreground="Orange" DockPanel.Dock="Right"/>
                        </DockPanel>
                        <Slider x:Name="SliderDev" Minimum="0" Maximum="200" Value="20"/>
                    </StackPanel>
                </TabItem>
            </TabControl>

            <Button x:Name="BtnToggle" Content="INICIAR (F6)" Height="50" Margin="0,15,0,0"
                    Background="#333" Foreground="White" FontWeight="Bold" FontSize="14"
                    Click="BtnToggle_Click" BorderBrush="#00FF99" BorderThickness="1"/>

            <TextBlock x:Name="TxtStatus" Text="Esperando órdenes..." Foreground="Gray" Margin="0,10,0,0" HorizontalAlignment="Center" FontSize="11"/>
        </StackPanel>
    </Border>
</Window>